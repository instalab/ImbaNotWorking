
function CSSVariables(target,options){
	if(options === undefined) options = {};
	this._target = target;
	this._vars = {};
	this._changed = {};
	this;
};

exports.CSSVariables = CSSVariables; // export class 
CSSVariables.prototype.get = function (key){
	return this._vars[key];
};

CSSVariables.prototype.set = function (key,value){
	if (key instanceof Object) {
		for (let v, i = 0, keys = Object.keys(key), l = keys.length, k; i < l; i++){
			k = keys[i];v = key[k];this.set(k,v);
		};
		return this;
	};
	
	let prev = this._vars[key];
	
	if (prev == value) {
		return true;
	};
	
	this._vars[key] = value;
	this._changed[key] = true;
	this._target.dom().style.setProperty(("--" + key),value);
	return true;
};
