var Imba = require('imba');
var Page = require('./Page').Page;

var ErrorPage = Imba.defineTag('ErrorPage', Page, function(tag){
	
	tag.prototype.isLoaded = function (){
		return true;
	};
	
	tag.prototype.title = function (){
		return "An error occurred";
	};
	
	tag.prototype.render = function (){
		return this.$open(0).flag('dark').setText("An error occurred when loading the page. Please try again later.").synced();
	};
})
exports.ErrorPage = ErrorPage;
