var Imba = require('imba'), _1 = Imba.createElement;
var Page = require('./Page').Page;

var LoginPage = Imba.defineTag('LoginPage', Page, function(tag){
	
	tag.prototype.render = function (){
		var $ = this.$;
		return this.$open(0).setChildren($.$ = $.$ || [
			_1('form',$,0,this).setMethod('POST').setAction('/login').setContent([
				_1('input',$,1,0).setName('username').setPlaceholder('username'),
				_1('input',$,2,0).setType('password').setName('password'),
				_1('button',$,3,0).setType('submit').setText("Sign in")
			],2),
			
			_1('a',$,4,this).flag('external').setHref("/auth/github").setText("Sign in with GitHub")
		],2).synced((
			$[0].end((
				$[1].end(),
				$[2].end(),
				$[3].end()
			,true)),
			$[4].end()
		,true));
	};
})
exports.LoginPage = LoginPage;
