var Imba = require('imba');
var Page = require('./Page').Page;

var NotFoundPage = Imba.defineTag('NotFoundPage', Page, function(tag){
	
	tag.prototype.isLoaded = function (){
		return true;
	};
	
	tag.prototype.path = function (){
		return [['/',"Not found"]];
	};
	
	tag.prototype.title = function (){
		return "Page not found";
	};
	
	tag.prototype.render = function (){
		return this.$open(0).flag('dark').setText("The page you are looking for does not exist").synced();
	};
})
exports.NotFoundPage = NotFoundPage;
