var Imba = require('imba');
var Widget = require('./widget').Widget;

function SidebarWidget(){ return Widget.apply(this,arguments) };

Imba.subclass(SidebarWidget,Widget);
exports.SidebarWidget = SidebarWidget; // export class 
SidebarWidget.register('sidebar');

SidebarWidget.option('width',{'default': 200,overridable: true,cssvar: {name: 'sidebar-width',unit: 'px'}});

SidebarWidget.prototype.view = function(v){ return this._view; }
SidebarWidget.prototype.setView = function(v){ this._view = v; return this; };

SidebarWidget.prototype.setup = function (){
	return this;
};
