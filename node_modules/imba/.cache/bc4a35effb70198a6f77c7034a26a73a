function UserAgent(ua){
	this._ua = ua;
};

exports.UserAgent = UserAgent; // export class 
UserAgent.prototype.detect = function (pattern){
	return (pattern).test(this._ua);
};

UserAgent.prototype.platform = function (){
	return false ? true : "Server";
};

UserAgent.prototype.isIE = function (){
	return this.detect(/\bTrident\b/);
};
UserAgent.prototype.isChrome = function (){
	return this.detect(/webkit\W.*(chrome|chromium)\W/i);
};
UserAgent.prototype.isFirefox = function (){
	return this.detect(/mozilla.*\Wfirefox\W/i);
};
UserAgent.prototype.isGecko = function (){
	return this.detect(/mozilla(?!.*webkit).*\Wgecko\W/i);
};
UserAgent.prototype.isKindle = function (){
	return this.detect(/\W(kindle|silk)\W/i);
};
UserAgent.prototype.isMobile = function (){
	return this.detect(/(iphone|ipod|((?:android)?.*?mobile)|blackberry|nokia)/i);
};
UserAgent.prototype.isOpera = function (){
	return this.detect(/opera.*\Wpresto\W|OPR/i);
};
UserAgent.prototype.isSafari = function (){
	return this.detect(/webkit\W(?!.*chrome).*safari\W/i);
};
UserAgent.prototype.isTablet = function (){
	return this.detect(/(ipad|android(?!.*mobile)|tablet)/i);
};
UserAgent.prototype.isTV = function (){
	return this.detect(/googletv|sonydtv/i);
};
UserAgent.prototype.isWebKit = function (){
	return this.detect(/webkit\W/i);
};
UserAgent.prototype.isAndroid = function (){
	return this.detect(/android/i);
};
UserAgent.prototype.isIOS = function (){
	return this.detect(/(ipad|iphone|ipod)/i);
};
UserAgent.prototype.isIPad = function (){
	return this.detect(/ipad/i);
};
UserAgent.prototype.isIPhone = function (){
	return this.detect(/iphone/i);
};
UserAgent.prototype.isIPod = function (){
	return this.detect(/ipod/i);
};
UserAgent.prototype.isPhone = function (){
	return this.isMobile() && !(this.isTablet());
};

UserAgent.prototype.isMac = function (){
	return this.platform().indexOf('Mac') >= 0;
};
UserAgent.prototype.isWindows = function (){
	return this.platform().indexOf('Mac') == -1;
};

UserAgent.prototype.whoami = function (){
	return this._ua;
};
