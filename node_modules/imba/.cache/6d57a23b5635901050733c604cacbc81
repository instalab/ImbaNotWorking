var Imba = require('imba'), _1 = Imba.createElement;

var Start = Imba.defineTag('Start', function(tag){
	
	tag.prototype.name = function(v){ return this._name; }
	tag.prototype.setName = function(v){ this._name = v; return this; };
	
	tag.prototype.signIn = function (){
		this.api().tryLogin();
		return this.trigger('uxa:hide');
	};
	
	
	tag.prototype.render = function (){
		var $ = this.$;
		return this.$open(0).setChildren(
			// <header> <h2> "Sign in to get started"
			$[0] || _1('div',$,0,this).flag('body').setContent([
				_1('p',$,1,0).flag('muted').flag('sm').flag('mb-lg').setText("Congrats, you're about to start your very first live-stream! However, you'll need to authenticate via GitHub first. Click the button below and you'll be live within a few seconds."),
				_1('button',$,2,0).flag('button').flag('lg').flag('primary').on$(0,['tap','signIn'],this).dataset('icon','github').setContent($[3] || _1('span',$,3,2).setText("Sign in with GitHub"),2)
			],2)
		,2).synced((
			$[2].end()
		,true));
	};
})
exports.Start = Start;
