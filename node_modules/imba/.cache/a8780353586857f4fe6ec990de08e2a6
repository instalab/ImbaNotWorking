

var Struct = require('./Struct').Struct;
var protocol$ = require('../protocol'), ACTION = protocol$.ACTION, CAST = protocol$.CAST;

var PointerUpdate = require('./StreamAction').PointerUpdate;

function Pointer(stream){
	this._stream = stream;
	this;
};

exports.Pointer = Pointer; // export class 
Pointer.prototype.last = function(v){ return this._last; }
Pointer.prototype.setLast = function(v){ this._last = v; return this; };
Pointer.prototype.stream = function(v){ return this._stream; }
Pointer.prototype.setStream = function(v){ this._stream = v; return this; };

Pointer.prototype.addFrame = function (pars){ // [x,y,buttons,hover]
	var action = PointerUpdate.build(pars);
	this.stream()._owner.addLocalEvent(action);
	return this;
};

Pointer.prototype.view = function (){
	return this._view || (this._view = this._stream._owner._space._view._pointer);
};
