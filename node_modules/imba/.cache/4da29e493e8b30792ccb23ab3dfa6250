var Imba = require('imba'), _1 = Imba.createElement;
var uxa$ = require('uxa'), Menu = uxa$.Menu, MenuItem = uxa$.MenuItem;

var PlaylistMenu = Imba.defineTag('PlaylistMenu', Menu, function(tag){
	
	tag.prototype.render = function (){
		var $ = this.$;
		return this.$open(0).setChildren($.$ = $.$ || [
			_1(MenuItem,$,0,this).setIcon('>').setAction('playlistedit').setLabel("Edit playlist"),
			_1('hr',$,1,this),
			_1(MenuItem,$,2,this).flag('neg').setIcon('x').setAction('playlistdel').setLabel("Delete playlist")
		],2).synced((
			$[0].end(),
			$[2].end()
		,true));
	};
})
exports.PlaylistMenu = PlaylistMenu;
