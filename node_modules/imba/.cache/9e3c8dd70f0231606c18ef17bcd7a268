var Imba = require('imba');
var Resource = require('../store/Resource').Resource;
function Action(){ return Resource.apply(this,arguments) };

Imba.subclass(Action,Resource);
exports.Action = Action; // export class 
Action.prototype.updateFromPromise = function (promise){
	var self = this;
	var success = function(result) {
		return self.update({state: 'success',result: result});
	};
	var fail = function(err) {
		return self.update({state: 'failed',result: err});
	};
	return promise.then(success,fail);
};
