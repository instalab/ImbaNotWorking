var Imba = require('imba');
var protocol$ = require('../protocol'), WIDGET = protocol$.WIDGET, POINTER = protocol$.POINTER, SCON = protocol$.SCON;

var Widget = require('./widget').Widget;
var Delay = require('../../util/Delay').Delay;

var SF = POINTER.STATEFLAGS;

var util = require('../util/index');

function PointerWidget(){ return Widget.apply(this,arguments) };

Imba.subclass(PointerWidget,Widget);
exports.PointerWidget = PointerWidget; // export class 
PointerWidget.register('pointer',POINTER);

PointerWidget.prototype.setup = function (){
	return this;
};
