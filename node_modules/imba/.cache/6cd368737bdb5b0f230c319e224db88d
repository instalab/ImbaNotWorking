var Imba = require('imba');
var Code = Imba.defineTag('Code', function(tag){
	
	tag.highlight = function (code,lang){
		if (code.indexOf('"') >= 0) {
			code = code.replace(/\"/g,"&quot;");
		};
		if (code.indexOf('<') >= 0) {
			code = code.replace(/\</g,"&lt;");
		};
		if (code.indexOf('>') >= 0) {
			code = code.replace(/\>/g,"&gt;");
		};
		return code;
	};
})
exports.Code = Code;
